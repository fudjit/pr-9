        </Menu>
        <ListBox x:Name="listBox" Margin="15,24,29,49"/>
        <TextBlock HorizontalAlignment="Left" Margin="15,194,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="45" Height="20"><Run Language="ru-ru" Text="Адрес: "/></TextBlock>
        <TextBox x:Name="inputAddress" HorizontalAlignment="Left" Margin="55,194,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Height="20"/>
    </Grid>
</Window>
